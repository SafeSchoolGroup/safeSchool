{% extends 'base.html.twig' %}

{% block body %}
    <h1>Avis</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ avi.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ avi.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ avi.contenu }}</td>
            </tr>
          
            <tr>
                <th>Createdat</th>
                <td>{% if avi.createdAt %}{{ avi.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if avi.updatedAt %}{{ avi.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('api_info_avis_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('api_info_avis_edit', { 'id': avi.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
